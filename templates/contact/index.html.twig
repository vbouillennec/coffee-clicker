{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	<div class="flex row flex-col justify-center items-center text-white">
		<div class="col w-full md:w-2/3 lg:w-1/2 xl:w-1/3">
			<h1 class="p-4 text-white font-semibold text-2xl flex justify-center">
				Contact Us
			</h1>
			{% for message in app.flashes('success') %}
				<div class="p-4 mb-4 text-sm rounded-lg bg-gray-800 text-green-400" role="alert">
					<span class="font-medium">{{ message }}</span>
				</div>
			{% endfor %}
			{{ form (form) }}
			</div>
		{% endblock %}
