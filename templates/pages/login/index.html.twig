{% extends 'base.html.twig' %}

{% block title %}
	Coffee Clicker - Login
{% endblock %}

{% block body %}
	<div class="flex row flex-col justify-center items-center text-white">
		<div class="col w-full sm:w-2/3 md:w-1/2 lg:w-1/3">
			<h1 class="p-4 text-white font-semibold text-2xl flex justify-center">
				Login
			</h1>
			{% for message in app.flashes('danger') %}
				<div class="p-4 mb-4 text-sm rounded-lg bg-gray-800 text-red-400" role="alert">
					<span class="font-medium">{{ message }}</span>
				</div>
			{% endfor %}

			{% if error %}
				<div class="p-4 mb-4 text-sm rounded-lg bg-gray-800 text-red-400" role="alert">
					<span class="font-medium">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
				</div>
			{% endif %}

			<form action="{{ path('login.index') }}" method="post">
				<div class="mb-2 px-3">
					<label for="email" class="block mb-2 text-sm font-medium text-white">
						Email
					</label>
					<input type="email" class="bg-gray-600 border border-gray-500 placeholder-gray-400 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="mail@example.com" id="email" name="_username" value="{{ last_username }}" required>
				</div>
				<div class="mb-2 px-3">
					<label for="password" class="block mb-2 text-sm font-medium text-white">
						Password
					</label>
					<input type="password" id="password" class="bg-gray-600 border border-gray-500 placeholder-gray-400 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" name="_password" required placeholder="********">
				</div>
				<div class="mb-2 px-3 flex justify-end">
					<button type="submit" class="text-white bg-gradient-to-br from-amber-600 to-orange-900  hover:from-amber-700 hover:to-orange-950 focus:ring-4 focus:outline-none focus:ring-amber-800 font-medium rounded-lg text-sm px-5 py-2.5 my-2 text-center w-full md:w-auto">Login</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
