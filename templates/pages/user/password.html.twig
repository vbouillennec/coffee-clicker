{% extends 'base.html.twig' %}

{% form_theme form 'form/theme.html.twig' %}

{% block title %}
	Coffee Clicker - Edit User
{% endblock %}

{% block body %}
	<div class="flex row flex-col justify-center items-center text-white">
		<div class="col w-full md:w-2/3 lg:w-1/2 xl:w-1/3">
			<h1 class="p-4 dark:text-white font-semibold text-2xl flex justify-center">
				Edit user password
			</h1>
			{% for message in app.flashes('danger') %}
				<div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
					<span class="font-medium">{{ message }}</span>
				</div>
			{% endfor %}
			{{ form_start(form) }}
			<div class="text-red-300 text-sm font-semibold">
				{{ form_errors(form) }}
			</div>
			{{ form_row(form.plainPassword) }}
			{{ form_row(form.newPassword) }}
			<div class="mt-4 px-3 flex justify-between">
				<a href="{{path('home.index')}}" class="relative inline-flex items-center justify-center p-0.5 overflow-hidden text-sm font-medium text-neutral-500 rounded-lg group bg-gradient-to-br from-neutral-400 to-slate-500 group-hover:from-neutral-500 group-hover:to-slate-700 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-neutral-200 dark:focus:ring-neutral-800">
					<span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
						Cancel
					</span>
				</a>
			</a>
			{{ form_widget(form.submit, { 
				'attr' : {
					'class': 'text-white bg-gradient-to-br from-amber-600 to-orange-900  hover:from-amber-700 hover:to-orange-950 focus:ring-4 focus:outline-none focus:ring-orange-950 dark:focus:ring-amber-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center'
				}
			})}}
		</div>
		{{ form_end(form) }}
	</div>
</div>{% endblock %}
