	{{ parent() }}
{% endblock form_widget_simple %}

{% block form_widget_compound %}
	{% set widget_class = widget_class|default('block text-sm rounded-lg bg-gray-600 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 w-full p-2.5') %}
	{{ parent() }}
{% endblock form_widget_compound %}

{% block collection_widget  %}
	{% set widget_class = widget_class|default('block text-sm rounded-lg bg-gray-600 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 w-full p-2.5') %}
	{{ parent() }}
{% endblock collection_widget  %}

{% block widget_container_attributes  %}
	{% set widget_class = widget_class|default('block text-sm rounded-lg bg-gray-600 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 w-full p-2.5') %}
	{{ parent() }}
{% endblock widget_container_attributes  %}

{% block button_widget %}
	{% set attr = {class: attr.class|default('text-white bg-gradient-to-br from-amber-600 to-orange-900  hover:from-amber-700 hover:to-orange-950 focus:ring-4 focus:outline-none focus:ring-orange-950 focus:ring-amber-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center')} %}
	{{ parent() }}
{% endblock button_widget %}

{% block button_row %}
	{% set row_attr = {class: row_attr.class|default('flex justify-end my-4 px-3')} %}
	{{ parent() }}
{% endblock button_row %}
