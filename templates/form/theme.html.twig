{% use 'tailwind_2_layout.html.twig' %}

{% block form_row %}
	{% set row_class = row_class|default('mb-2 px-3') %}
	{{ parent() }}
{% endblock form_row %}

{% block form_errors %}
	{% set error_item_class = error_item_class|default('text-red-400 text-sm italic') %}
	{{ parent() }}
{% endblock form_errors %}

{% block form_label %}
	{% set label_class = label_class|default('block mb-2 text-sm font-medium text-gray-900 text-white') %}
	{{ parent() }}
{% endblock form_label %}

{% block form_widget %}
	{% set widget_class = widget_class|default('block text-sm rounded-lg bg-gray-600 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 w-full p-2.5') %}
	{{ parent() }}
{% endblock form_widget %}

{% block textarea_widget %}
	{% set widget_class = widget_class|default('block text-sm rounded-lg bg-gray-600 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 w-full p-2.5') %}
	{{ parent() }}
{% endblock textarea_widget %};


{% block password_widget %}
	{% set widget_class = widget_class|default('block text-sm rounded-lg bg-gray-600 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 w-full p-2.5') %}
	{{ parent() }}
{% endblock password_widget %}

{% block form_widget_simple %}
